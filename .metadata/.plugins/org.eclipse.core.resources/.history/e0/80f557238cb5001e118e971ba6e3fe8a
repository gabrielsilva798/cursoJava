package folhadepagamento;

public class Holerite {
	Funcionario funcionario = new Funcionario();
	
	double totalHorasNormais;
	double totalHorasExtras;
	double ValorAdicionalParaFilhos = 0.10;
	
	double totalEncargosTrabalhistas() {
		ContratoTrabalho contrato = new ContratoTrabalho();
		
		double resultado = (totalHorasNormais * Contrato.ValorHoraTrabalhada) +
				(totalHorasExtras * Contrato.ValorHoraExtraTrabalhada);
		
		return resultado * contrato.AdcionalPorFilho();

	}
}
