package portariahospital;
import java.util.Scanner;

public class Principal {
	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		Visitante novoVisitante = new Visitante();
		
		System.out.println("Nome do Paciente: ");
		novoVisitante.nome = entrada.next();
		System.out.println("Idade do Paciente: ");
		novoVisitante.idade = entrada.nextInt();
		
		System.out.println("Quantos messes o Paciente vai ficar ATIVO? ");
		int messesVisitantes = entrada.nextInt();
		
		CadastroPortaria cadastroPortaria =  new CadastroPortaria();
		cadastroPortaria.cadastrar(novoVisitante, messesVisitantes);
		
		entrada.close();
	}
}
